---
import { Icon } from "astro-icon/components";
---
<div class="card-container">
    <div class="text">
        <p class="title">ArtCollab</p>
        <p class="description">A creative platform by artists, for artists, fostering inspiration, collaboration, and community. </p>

        <div class="buttons">
            <button> 
                <Icon name="about-icon"></Icon> ABOUT
            </button>
            <button> 
                <Icon name="launch-icon"></Icon> LAUNCH
            </button>
        </div>
    </div>

    <div class="images">
        <img class="landing-page-image" src="/src/images/artCollabLandingPage.PNG">
        <!-- <img class="web-page" src="/src/images/artCollabLandingPage.PNG">  --> 
    </div>
   
</div>

<style>

.description{
    width: 50%;
}

.images{
    position: absolute;
    bottom: 0;
    margin: 0;
    right: 0;
}
img{
    height: 200px;
    margin-bottom: -4px; /*see what's happening  */
}
.card-container{
    background-color: #0740B3;
    color: #fff;
    height: 18rem;
    display: flex;
    align-items: center;
    border-radius: 20px;
    position: relative;
}

.title{
    font-weight: bold;
    font-size: 55px;
}

button{
    background-color: #173572;
    border:0;
    color: #fff;
    font-weight: bold;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap:10px;
    border-radius: 5px;
}

.buttons{
    display:flex;
    flex-direction:row;
    gap: 25px;
}

[data-icon] {
    height: 25px;
    width: 25px;
}

.text{
    display: flex;
    flex-direction: column;
    padding:30px;
    margin:30px 20px;
    gap:20px;
}
</style>