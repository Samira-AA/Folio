---
import Layout from '../layouts/Layout.astro';
import BrowserWindow from '../components/browserWindow.astro';
import StackCard from '../components/stackCard.astro'
---
<Layout>
    <BrowserWindow>
        <div class="containter">

            <div class="details-content">
                <div>
                    <span class="caption">
                        DETAILS
                    </span>
                    
                    <div class="details-card">
                        <span class="title">Email</span> 
                        <a class="social">samirajetzabel@gmail.com</a>
                        <span class="title">Linkedin</span>
                        <a class="social">samira-AAJ</a>
                        <span class="title">GitHub</span>
                        <a class="social">samira-AAJ</a>
                    </div>
                </div>
                

                <div class="about">
                    <div class="text">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Ratione sed tempora repellendus nihil illum exercitationem harum at odit sunt dolor, nisi veritatis facilis saepe eius deleniti vero ducimus. Repudiandae, deleniti.
                    </div>
                    <div class="button">
                        <a href="/src/documents/Samira-Alvarez-CV-en.pdf" download> <button class="download-button">Download CV</button> </a>
                    </div>
                </div>
            </div>
            
            <div class="stack-content">
                <span class="caption">
                    STACK
                </span>

                <div class="stack-cards">
                   <StackCard></StackCard>
                   <StackCard></StackCard>
                   <StackCard></StackCard>
                </div>
            </div>
        </div>
    </BrowserWindow>
</Layout>

<style>

    .text{
        font-weight: 300;
        font-size: 18px;
    }

    .about{
        display:flex;
        flex-direction: column;
        padding: 30px 50px;
    }

    .download-button{
        color:#fff;
        padding:15px 25px;
        border-radius:15px;
        font-size:18px;
        cursor:pointer;
        background-color: #191919;
        border: 0;
        margin-top: 20px;
    }

    .button{
        display:flex;
        justify-content: flex-end;
    }
  
    .details-content{
        display: flex;
        flex-direction: row;
    }

    .caption{
        display: block;
        margin-top: 25px;
        margin-bottom: 10px;
        font-weight: 800;
        font-size: 18px;
        
    }
    .container{
        height: 100%;
        width: 100%;
    }

    .details-card{
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 20px;
        border-radius: 20px;
        background-color: #191919;
        color: #fff;
    }

    .title{
        font-size: 18px;
        margin-bottom: 8px;
    }

    .social{
        margin-bottom: 20px;
        font-weight: bold;
        text-decoration: underline;
    }
</style>